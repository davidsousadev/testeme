{
  "version": 2,
  "projects": {
    "frontend": {
      "rootDirectory": "web"
    },
    "backend": {
      "rootDirectory": "api"
    }
  },
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/dist/$1"
    }
  ],
  "ignoreCommand": "true"
}
